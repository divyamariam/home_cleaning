<div class="page-content">
<script>
  var meid = "all";  
  $(document).ready(function(){
    $('#view_jobs').click(function() {
      var allVals = ($("input[name=chkboxName]:checked").map(function () {return this.value;}).get().join(","));
      $('#calendar').empty(); 
      loadCal(allVals);
    });
    loadCal(meid);
  });

  function loadCal(meid) {
    $('#calendar').fullCalendar({
        editable: true,
        header: {
            left: 'prev,next today',
            center: 'title',
            right: 'month,agendaWeek,agendaDay'
        },
        defaultView: 'agendaWeek',
        height: 500,
        slotMinutes: 15,
        selectable: true,
        selectHelper: true,
        select: function(start, end, allDay) {
          //var url = "http://0.0.0.0:3000/events/new";
          var url = $('#new_event_url').val();
          $.ajax({
            url: url,
            beforeSend: function() {
              $('#loading').show();
            },
            complete: function() {
              $('#loading').hide();
            },
            success: function(data) {
              $('#create_event').replaceWith(data['form']);
              $('#create_event_dialog').dialog({
                title: 'New Event',
                modal: true,
                width: 500,
                close: function(event, ui) { $('#create_event_dialog').dialog('destroy') }
              });
            }
          });
        },

        loading: function(bool){
            if (bool) 
                $('#loading').show();
            else 
                $('#loading').hide();
        },
        events: {
                url: "/events/get_events",
                data: {
                  empId: meid
                }
        },
        timeFormat: 'h:mm t{ - h:mm t} ',
        dragOpacity: "0.5",
        eventDrop: function(event, dayDelta, minuteDelta, allDay, revertFunc){
//              if (confirm("Are you sure about this change?")) {
                moveEvent(event, dayDelta, minuteDelta, allDay);
//              }
//              else {
//                  revertFunc();
//              }
        },
        
        eventResize: function(event, dayDelta, minuteDelta, revertFunc){
//              if (confirm("Are you sure about this change?")) {
                resizeEvent(event, dayDelta, minuteDelta);
//              }
//              else {
//                  revertFunc();
//              }
        },
          
        eventClick: function(event, jsEvent, view){
            showEventDetails(event);
        },      
      });
    }
</script>

