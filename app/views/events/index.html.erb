              <% @teams.each do |team| %>           
                <div class=""><!-- check_box('teamlist', '',{}, team.id, 'lst') %> -->
                <%= check_box_tag "chkboxName", team.id, :class =>"abc" %> <%= team.team_name %></div>
              <% end %>            
            </div>
            <div data-class="label-grey" style="position: relative;"><%= label_tag "View Jobs", nil, :class=> "btn" , :id=>"view_jobs"%></div>
          </div>
        </div>
      </div>
    </div>
  </div>
