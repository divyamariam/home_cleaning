<h1>Listing AreaCodes</h1>

<table>
  <thead>
    <tr>
      <th>Areacode</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th>Address</th>
      <th>Description</th>
      <th>Title</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @areas.each do |area| %>
      <tr>
        <td><%= area.areacode %></td>
        <td><%= area.latitude %></td>
        <td><%= area.longitude %></td>
        <td><%= area.address %></td>
        <td><%= area.description %></td>
        <td><%= area.title %></td>
        <td><%= link_to 'Show', area %></td>
        <td><%= link_to 'Edit', edit_area_path(area) %></td>
        <td><%= link_to 'Destroy', area, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

